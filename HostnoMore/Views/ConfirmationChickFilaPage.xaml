<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="HostnoMore.Views.ConfirmationChickFilaPage"
    NavigationPage.HasNavigationBar="false"
    BackgroundImage="paymentBackground.jpeg">
    <StackLayout
        VerticalOptions="CenterAndExpand"
        HorizontalOptions="CenterAndExpand">
        <Grid
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Padding="5, 20, 5, 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Label
                Text="Tip Your Experience!"
                FontAttributes="Bold"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                Grid.Row="0"
                Grid.Column="0"
                />
            <Button
                Text="0%"
                TextColor="Black"
                FontSize="20"
                BorderWidth="1"
                BorderRadius="1"
                BorderColor="#000"
                HorizontalOptions="Center"
                VerticalOptions="Fill"
                Grid.Row="1"
                Grid.Column="0"
                />

            <Button
                Text="15%"
                TextColor="Black"
                FontSize="20"
                HorizontalOptions="Center"
                VerticalOptions="Fill"
                Grid.Row="2"
                Grid.Column="0"
                />

            <Button
                Text="20%"
                TextColor="Black"
                FontSize="20"
                HorizontalOptions="Center"
                VerticalOptions="Fill"
                Grid.Row="3"
                Grid.Column="0"
                />
            <Button
                Text="Place Another Order"
                TextColor="Black"
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Center"
                VerticalOptions="Fill"
                Command="{Binding AnotherOrder}"
                Grid.Row="4"
                Grid.Column="0"
                />
        </Grid>
    </StackLayout>
</ContentPage>
