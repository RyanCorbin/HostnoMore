<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="HostnoMore.Views.LoginPage"
    BackgroundImage="">
    <StackLayout
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <Label
            Text="Enter Restaurant I.D."
            FontSize="16"
            FontAttributes="Bold"
            />
        <Entry
            Placeholder="username"
            Text="{Binding restID}"
            />
        <Label
            Text="Enter Restaurant Password"
            FontSize="16"
            FontAttributes="Bold"
            />
        <Entry
            Placeholder="****"
            Text="{Binding restPassword}"
            IsPassword="true"
            />
        <Button
                Text="Login Now"
                Command="{Binding GoToMainPage}"
                Grid.Row="3"
                Grid.Column="0"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="End"
                TextColor="Black" />
        <Button
                Text="Register Now"
                Command="{Binding GoToRegister}"
                Grid.Row="5"
                Grid.Column="0"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="End"
                TextColor="Black" />
    </StackLayout>
</ContentPage>
